<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
>
    <Dialog
        id="dialogid"
        class="sapUiSmallMargin"
        title=" Add Student Information"
    >
    
    <f:SimpleForm >
		<f:content>
        <VBox id="editFields" visible="true">
        <Label text="ID"></Label>
        <Input value="" width="150px" id="idinput" enabled="true" ></Input>
        <Label text="Name"></Label>
        <Input value="" width="150px" id="nameinput"></Input>
        <Label text="Contact"></Label>
        <Input value="" width="150px" id="contactinput"></Input>
        <Label text="DOB"></Label>
        <Input value="" width="150px" id="DOBinput"></Input>
        </VBox>
		</f:content>
    </f:SimpleForm>
    <buttons>
        <Button text="Submit" press="createData" type="Accept" id="buttonid"></Button>
        <Button text="close" press="onclose" class="sapUiSmallMarginBegin" type="Attention"></Button>
    </buttons>
       
 </Dialog>
</core:FragmentDefinition>